{
  "rules": [
    {
      "description": "Flag urgent emails from any sender",
      "predicate": "Any",
      "conditions": [
        {
          "field": "subject",
          "predicate": "contains",
          "value": ["URGENT", "ASAP", "CRITICAL", "IMPORTANT", "ACTION REQUIRED"]
        },
        {
          "field": "message",
          "predicate": "contains",
          "value": ["urgent", "deadline today", "immediate action"]
        }
      ],
      "actions": [
        {
          "action": "move_message",
          "destination": "IMPORTANT"
        }
      ]
    },
    {
      "description": "Mark invoices and receipts as read after 30 days",
      "predicate": "All",
      "conditions": [
        {
          "field": "subject",
          "predicate": "contains",
          "value": ["invoice", "receipt", "payment confirmation", "order confirmation"]
        },
        {
          "field": "received_at",
          "predicate": "greater_than",
          "value": 30,
          "unit": "days"
        }
      ],
      "actions": [
        {
          "action": "mark_as_read"
        }
      ]
    },
    {
      "description": "Prioritize emails from VIP clients",
      "predicate": "Any",
      "conditions": [
        {
          "field": "sender",
          "predicate": "contains",
          "value": ["@vipclient.com", "@importantcompany.com", "@bigcustomer.com"]
        },
        {
          "field": "sender",
          "predicate": "equals",
          "value": "ceo@mycompany.com"
        }
      ],
      "actions": [
        {
          "action": "move_message",
          "destination": "VIP"
        }
      ]
    },
    {
      "description": "Mark automated system emails from CI/CD as read",
      "predicate": "All",
      "conditions": [
        {
          "field": "sender",
          "predicate": "contains",
          "value": ["noreply@github.com", "jenkins@", "gitlab@", "circleci@"]
        },
        {
          "field": "subject",
          "predicate": "contains",
          "value": ["build", "deployment", "pipeline", "succeeded", "passed"]
        }
      ],
      "actions": [
        {
          "action": "mark_as_read"
        }
      ]
    },
    {
      "description": "Keep recent emails from recruiters unread for follow-up",
      "predicate": "All",
      "conditions": [
        {
          "field": "subject",
          "predicate": "contains",
          "value": ["job opportunity", "position at", "career opportunity", "hiring"]
        },
        {
          "field": "received_at",
          "predicate": "less_than",
          "value": 3,
          "unit": "days"
        }
      ],
      "actions": [
        {
          "action": "mark_as_unread"
        },
        {
          "action": "move_message",
          "destination": "Jobs"
        }
      ]
    },
    {
      "description": "Flag security and account alerts immediately",
      "predicate": "Any",
      "conditions": [
        {
          "field": "subject",
          "predicate": "contains",
          "value": ["security alert", "suspicious activity", "password reset", "login attempt"]
        },
        {
          "field": "message",
          "predicate": "contains",
          "value": ["unauthorized access", "verify your identity", "unusual activity"]
        }
      ],
      "actions": [
        {
          "action": "move_message",
          "destination": "Security"
        }
      ]
    }
  ]
}